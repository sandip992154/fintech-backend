PROJECT_NAME=Bandru Financial Services API
VERSION=1.0.0
DESCRIPTION=Comprehensive fintech API with role-based authentication

# =================================
# SERVER CONFIGURATION
# =================================
DEBUG=True
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=DEBUG

# =================================
# SECURITY CONFIGURATION
# =================================
# IMPORTANT: Change this to a strong, unique secret key in production
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES = 28800
REFRESH_TOKEN_EXPIRE_DAYS = 30


# =================================
# DATABASE CONFIGURATION
# =================================
# SQLite (Development)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL (Production example)
# DATABASE_URL=postgresql://username:password@localhost:5432/bandru_db

# MySQL (Alternative example)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/bandru_db

# =================================
# CORS CONFIGURATION
# =================================
# Comma-separated list of allowed origins
# Use "*" for development, specific domains for production
ALLOWED_HOSTS=*

# Production example:
# ALLOWED_HOSTS=https://bandarupay.com,https://app.bandarupay.com,http://localhost:3000

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=uploads

# =================================
# EXTERNAL API CONFIGURATION
# =================================
# AEPS Service
AEPS_API_URL=https://api.aeps.example.com
AEPS_API_KEY=your-aeps-api-key

# mATM Service
MATM_API_URL=https://api.matm.example.com
MATM_API_KEY=your-matm-api-key

# Insurance Service
INSURANCE_API_URL=https://api.insurance.example.com
INSURANCE_API_KEY=your-insurance-api-key

# PAN Card Service
PAN_API_URL=https://api.pan.example.com
PAN_API_KEY=your-pan-api-key

# FASTag Service
FASTAG_API_URL=https://api.fastag.example.com
FASTAG_API_KEY=your-fastag-api-key

# =================================
# EMAIL CONFIGURATION
# =================================
# SMTP settings for sending notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@bandarupay.com

# =================================
# PAYMENT GATEWAY CONFIGURATION
# =================================
# Razorpay (example)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# PayU (example)
PAYU_MERCHANT_ID=your-payu-merchant-id
PAYU_MERCHANT_KEY=your-payu-merchant-key
PAYU_SALT=your-payu-salt

# =================================
# SMS CONFIGURATION
# =================================
SMS_API_URL=https://api.sms.example.com
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=BANDRU

# =================================
# MONITORING & ANALYTICS
# =================================
# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =================================
# REDIS CONFIGURATION (Optional)
# =================================
# For caching and session management
REDIS_URL=redis://localhost:6379/0


# ENVIRONMENT SPECIFIC
ENVIRONMENT=development


